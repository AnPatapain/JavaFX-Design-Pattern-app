<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>


<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.insa.bourges.firstapplicationjfx.features.recipe.view.components.RecipeNoteFormModal"
      spacing="10" style="-fx-padding: 20;">
    <Label text="PersonalNote" style="-fx-font-size: 20px;"/>
    <TextArea fx:id="noteArea" promptText="Write your notes here..." prefHeight="100" />

    <HBox spacing="10">
        <Button text="Save" onAction="#onSaveButtonClickHandler"/>
        <Button text="Cancel" onAction="#onCancelButtonClickHandler"/>
    </HBox>
</VBox>
